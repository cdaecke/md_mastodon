<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <mdmastodon_api>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.configId>
                        <TCEforms>
                            <label>LLL:EXT:md_mastodon/Resources/Private/Language/locallang.xlf:flexforms.plugin_api.configId</label>
                            <description>LLL:EXT:md_mastodon/Resources/Private/Language/locallang.xlf:flexforms.plugin_api.configId.description</description>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_mdmastodon_domain_model_configuration</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <required>1</required>
                            </config>
                        </TCEforms>
                    </settings.configId>
                    <settings.limit>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:md_mastodon/Resources/Private/Language/locallang.xlf:flexforms.plugin_api.limit</label>
